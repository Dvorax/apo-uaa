<!-- <span style="font-size:4em; font-weight:bold; line-height:normal;">MAR</span> -->

<br><ul class="nav nav-list">
  <li class="divider"></li>
</ul><br>

<div class="row">
  <div class="span4">
    <a href="/" class="btn">Previous</a>
  </div>
  <div class="span4 text-center">
    <%= link_to "Create New Event", new_event_path, :class => "btn btn-primary" %>
  </div>
  <div class="span4 text-right">
    <a href="/" class="btn">Next</a>
  </div>
</div>

<% 
  for i in 0...@events.length
    event = @events[i]
    prev_event = @events[i-1]
    next_event = @events[i+1]

    # duration = end_clock - start_clock
%>

<% if prev_event.start_year != event.start_year || prev_event.start_date > event.start_date %>

<!-- Begin Year -->
<br><ul class="nav nav-list">
  <li class="divider"></li>
</ul><br>

<div class="row">
  <div class="span4 offset4 column-label">
    <small>Event:</small>
  </div>
  <div class="span2 column-label">
    <small>Time:</small>
  </div>
  <div class="span2 column-label">
    <small>Place:</small>
  </div>
</div>

<div class="row">
  <div class="span1 year">
    <h2><%= event.start_year %></h2>
  </div>
  <div class="span11">
<% end %>

    <% if prev_event.start_year + prev_event.start_month_caps != event.start_year + event.start_month_caps %>


    <!-- Begin Month -->
      <% if prev_event.start_year == event.start_year %>
    <ul class="nav nav-list">
      <li class="divider"></li>
    </ul><br>

    <div class="row">
      <div class="span4 offset3 column-label">
        <small>Event:</small>
      </div>
      <div class="span2 column-label">
        <small>Time:</small>
      </div>
      <div class="span2 column-label">
        <small>Place:</small>
      </div>
    </div>

      <% end %>

    <div class="row">
      <div class="span1 month">
        <h3><%= event.start_month_caps %></h3>
      </div>
      <div class="span10">
    <% end %>

        <% if prev_event.start_year + prev_event.start_month_caps + prev_event.start_day != event.start_year + event.start_month_caps + event.start_day %>
        <!-- Begin Day -->
        <div class="row">
          <div class="span1 date">
            <h4>
              <%= event.start_day %> <div class="day-of-week"><%= event.start_weekday_caps %></div>
              <% if event.more_than_a_day %>
              <div class="end-date">
                <small>to</small>
                <%= event.end_day %> 
                <div class="day-of-week"><%= event.end_weekday_caps %></div>
              </div>
              <% end %>
            </h4>
          </div>
          <div class="span8 offset1 events">
        <% end %>

            <!-- Begin Event -->
            <a href="<%= event_path(event) %>">
              <div class="row">
                <div class="span4 title">
                  <h5><%= event.name %></h5>
                </div>
                <div class="span2">
                  <div class="data">
                    <!-- <small>Time:</small> -->
                    <%= event.time %>
                  </div>
                </div>
                <div class="span2">
                  <div class="data">
                    <!-- <small>Location:</small> -->
                    <%= event.location %>
                  </div>
                </div>
              </div>
              <% if event.summary != nil %>
              <div class="summary">
                <%= event.summary %>
              </div>
              <% end %>
            </a>
            <!-- End Event -->

        <% if next_event.nil? || next_event.start_year + next_event.start_month_caps + next_event.start_day != event.start_year + event.start_month_caps + event.start_day %>
          </div>
        </div>
        <!-- End Day -->
        <% end %>

    <% if next_event.nil? || next_event.start_year + next_event.start_month_caps != event.start_year + event.start_month_caps %>
      </div>
    </div>
    <!-- End Month -->
    <% end %>

<% if next_event.nil? || next_event.start_year != event.start_year %>
  </div>
</div>
<!-- End Year -->
<% end %>

<% end %> 

<% if @events.length < 1 %>
<div class="lead text-center">
  There are no events to display
</div>
<% end %>
